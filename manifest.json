{
  "manifest_version": 3,
  "name": "TRJ Calculator",
  "version": "1.0",
  "description": "Calculer le Taux de Retour aux Joueurs sur les sites des bookmakers.",
  "permissions": ["activeTab", "scripting", "webNavigation"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.betclic.fr/*",
        "https://*.unibet.fr/*",
        "https://*.parionssport.fdj.fr/*",
        "https://*.winamax.fr/*"
      ],
      "js": ["dist/content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
